<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <!-- /header -->

  <body>
    <header id="header" class="navbar navbar-default clearfix">
      <h3 class="Bookers">Bookers</h3>
    <div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
      <li class="">
        <%= link_to "  Home" , user_path(current_user), class:"glyphicon glyphicon-home" %>
      </li>
      <li class="">
        <%= link_to "  Users" , users_path, class:"glyphicon glyphicon-user" %>
      </li>
      <li class="">
        <%= link_to "  Books" , books_path, class:"glyphicon glyphicon-book" %>
      </li>
      <li class="">
        <%= link_to "  log out", destroy_user_session_path, method: "delete", class:"glyphicon glyphicon-log-in" %>
      </li>
    <% else %>
      <li >
        <%= link_to "  Home" , root_path, class:"glyphicon glyphicon-home" %>
      </li>
      <li class="">
        <%= link_to "  about" , home_about_path , class:"glyphicon glyphicon-paperclip"%>
      </li>
      <li class="">
        <%= link_to "  sign up", new_user_registration_path, class:"glyphicon glyphicon-edit" %>
      </li>
      <li class="">
        <%= link_to "  login", new_user_session_path, class:"glyphicon glyphicon-log-in" %>
      </li>
    <% end %>
  </ul>
</div>
  </header>

      <% if flash[:notice]%>
          <div class="flash">
                <%= flash[:notice]%> 
          </div>
      <%end%>

    <%= yield %>
  </body>
</html>
