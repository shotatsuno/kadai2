
<div class="container">
	<div class="row">
		<div class="col-lg-4">
<%= render 'users/side', user: @user, book: @book %>
		</div>
<div class="col-lg-8">
<section>
	<h1>Users</h1>
	<table class="table table-striped">
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
			<td><%= user.name %></td>
			<td><%= link_to 'show', user_path(user) %></td>
		</tr>
		<% end %>
    </table>
</section>
</div>
</div>
</div>



