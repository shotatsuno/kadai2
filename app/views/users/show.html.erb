<div class="container">
	<div class="row">
		<div class="col-lg-4">
<%= render 'users/side', user: @user, book: @book %>
</div>
<div class="col-lg-8">
<section class="">
	<h1>Books</h1>
	<table class="table table-striped">
		<tr class="">
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>

		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
			<td><%= link_to book.title, book_path(book) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</table>
</section>
</div>
</div>
</div>
