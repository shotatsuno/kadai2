
<div class="container">
	<div class="row">
		<div class="col-lg-4">

	<%= render 'users/side', user: @user, book: @book %>
		</div>
	<div class="col-lg-8">
	<section>
	<h1>Book detail</h1>
	<table class="table table-striped">
	<thread>
	<tr>
		<td><%= attachment_image_tag @user, :profile_image, :fill,20,20, fallback: "no_image.jpg", size:"40x40" %><br>
			<%= link_to @user.name, user_path(@user) %></td>
		<td><%= @books.title %></td>
		<td><%= @books.body %></td>
		<% if current_user.id == @books.user_id %>
		<td><%= link_to "Edit", edit_book_path(@books) %></td>
		<td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
		<% end %>
	 </tr>
	</thread>
    </table>
</section>
</div>
</div>
</div>