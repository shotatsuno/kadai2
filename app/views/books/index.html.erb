

<div class="container">
	<div class="row">
	<div class="col-lg-4">

	<%= render 'users/side', user: @user, book: @book %>
    </div>
<div class="col-lg-8">
<section>
	<h1>Books</h1>
		<table class="table table-striped">
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinipn</th>
			</tr>

			<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag book.user, :profile_image, :fill,20,20, fallback: "no_image.jpg", size:"40x40" %></td>
				<td><%= link_to book.title, book_path(book) %></td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		</table>
	</section>
</div>
</div>
</div>


